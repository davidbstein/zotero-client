{
  "name": "stein-zotero-tools",
  "description": "Some tools for Zotero",
  "author": "Stein",
  "version": "0.0.1",
  "license": "MIT",
  "build": {
    "appId": "com.electron.stein-zotero-tools",
    "mac": {
      "icon": "build/icon.png",
      "category": "public.app-category.productivity",
      "target": "dmg"
    }
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "build": "sudo electron-builder",
    "dist": "yarn compile && yarn build",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "wipe": "rm -rf dist && rm -rf node_modules && rm -rf yarn.lock && yarn install"
  },
  "electronWebpack": {
    "renderer": {
      "webpackConfig": "webpack.renderer.additions.js"
    }
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.4",
    "electron-fetch": "^1.7.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.0.2",
    "redux": "^4.2.0",
    "source-map-support": "^0.5.16",
    "sqlite3": "^5.1.1"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.16.7",
    "babel": "^6.23.0",
    "electron": "^18.3.7",
    "electron-builder": "^23.0.3",
    "electron-webpack": "*",
    "node-gyp": "^9.0.0",
    "sass": "^1.49.7",
    "sass-loader": "^10.1.1",
    "webpack": "~4.42.1"
  }
}
